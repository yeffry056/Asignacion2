<Window x:Class="asignacion2.FactorialDeUnNumero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:asignacion2"
        mc:Ignorable="d"
        Title="Factorial" Height="160" Width="456">
    <Grid Background="#FF06D3CF">
        <Label Content="Numero" HorizontalAlignment="Left" Margin="27,34,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextNumero" HorizontalAlignment="Left" Margin="94,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Calcular" HorizontalAlignment="Left" Margin="227,38,0,0" VerticalAlignment="Top" Click="Calcular"/>
        <Label Content="Resultado" HorizontalAlignment="Left" Margin="27,81,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextResultado" HorizontalAlignment="Left" Margin="94,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>



    </Grid>
</Window>
